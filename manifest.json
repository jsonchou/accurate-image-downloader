{
    "name": "accurate-image-downloader",
    "short_name": "accurate",
    "version": "1.0.0",
    "background": {
        "scripts": ["/dist/scripts/options.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "/dist/images/icon_128.png",
        "default_popup": "/dist/index.html"
    },
    "description": "a Chrome Extension of accurate download image.",
    "icons": {
        "16": "/dist/images/icon_16.png",
        "48": "/dist/images/icon_48.png",
        "128": "/dist/images/icon_128.png"
    },
    "manifest_version": 2,
    "minimum_chrome_version": "31",
    "permissions": ["activeTab", "tabs", "storage", "downloads", "clipboardWrite", "clipboardRead", "http://*/*", "https://*/*"],
    "update_url": "https://clients2.google.com/service/update2/crx",
    "options_page": "/dist/options.html",
    "web_accessible_resources": ["/dist/images/*", "/dist/scripts/", "/dist/styles/*", "/dist/fonts/*", "/libs/*"]
}